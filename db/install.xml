<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/registration/db" VERSION="20220713" COMMENT="XMLDB file for Moodle local/registration"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="local_registration" COMMENT="Temporary table for registration workflow testing">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="assessor" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="confirmed" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="approved" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="firstname" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="lastname" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="email" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="tenantid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="country" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="gender" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="position" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="domain" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="comments" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="interests" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
